{% extends "base.twig" %}

{% block content %}
    <h1>ROD {{ post.title }}</h1>
    <h2>Temperatura w {{ city_name }}: {{ weather.temp }} °C</h2>
    <h2>Opis ROD:</h2>
    {{ rod_description }}
    <h2>Wykaz działek:</h2>
    <ul>
        {% for single_plot in plots_in_rod %}
            <h2><a href="{{ fn('get_permalink', single_plot.ID ) }}">{{ single_plot.post_title }}</a></h2>
        {% endfor %}
    </ul>
    <h2>Harmonogram:</h2>
    {% include 'partial/events-list.twig' with { 'events' : events } %}
{% endblock %}
